extend bootstrap

block content
  .modal.show
    .modal-dialog
      .modal-content
        form(method="post")
          .modal-header
            h3.modal-title #{title}
          .modal-body
            .row
              .form-group.col-sm-5
                label(for="last-name") Last name
                input.form-control#last-name(type="text" name="last_name")
              .form-group.col-sm-5
                label(for="first-name") First name
                input.form-control#first-name(type="text" name="first_name")
              .form-group.col-sm-2
                label(for="middle-initial") M. I.
                input.form-control#middle-initial(type="text" name="middle_initial")
            .row
              .form-group.col-sm-5#password-group
                label(for="password") Password
                input.form-control#password(type="password" name="password")
              .form-group.col-sm-7
                label &nbsp;
            .row
              .form-group.form-group-sm.col-sm-12
                while message = flash.shift()
                  div.alert(class="alert-" + message.type role="alert")= message.message
          .modal-footer
            button.btn.btn-primary(type="submit")
              | Login
