extend bootstrap

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") TDG
      .collapse.navbar-collapse#navbar
        ul.nav.navbar-nav
          li.active: a(href="#scenarios" data-toggle="tab") Scenarios
          li: a(href="#sessions" data-toggle="tab") Sessions
  .tab-content
    .tab-pane.active#scenarios(role="tabpanel")
      block scenarios
    .tab-pane#sessions(role="tabpanel")
      block sessions
